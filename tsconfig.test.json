{
  "compilerOptions": {
    "module": "Node16",
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "rootDir": "tests",
    "strict": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["tests/**/*"]
}
